---
import Layout from '@layouts/Layout.astro'
import Hero from '@components/Index/HeroHeader.astro'
import Productos from '@components/Index/Productos.astro'
import { getI18N } from '@i18n/index'
const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<Layout title={i18n.HEADERS.INDEX_SEO_TITLE} description={i18n.HEADERS.INDEX_SEO_DESCRIPTION}>
  <section id="inicio">
    <Hero />
  </section>
  <section id="productos">
    <Productos />
  </section>

</Layout>

