---
import { Image } from 'astro:assets'

interface Props {
    image: ImageMetadata,
    titleText?: string,
    altText: string
}
const {image, titleText, altText} = Astro.props
---


<div class="w-full relative">

    <Image src={image} alt={altText} />
    <div class="absolute top-8 left-10 md:top-14 md:left-10">

        <h1 class="text-2xl md:text-4xl lg:text-7xl font-bold tracking-wider text-[#d59c12]">{titleText}</h1>
    </div>
</div>