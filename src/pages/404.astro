---
import Layout from "@layouts/Layout.astro";
import { getI18N } from '@i18n/index'
import { Icon } from 'astro-icon/components';
const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---
<Layout title="Garen | Pagina no encontrada" description="lamentamos el inconveniente pero la pagina solicitada no existe">

    <div class="grid h-screen px-4 place-content-center bg-white ">
        <div class="text-center">
          <h1 class="font-black text-gray-500 text-9xl">{i18n[404].TITLE}</h1>
      
          <p class="text-2xl font-bold tracking-tight text-gray-900 sm:text-4xl">
           {i18n[404].SUBTITLE}
          </p>
      
          <p class="mt-4 text-gray-500">  {i18n[404].BODY}.</p>
      
          <a
            href="/"
            class="inline-block px-5 py-3 mt-6 text-sm font-medium text-white bg-indigo-600 rounded hover:bg-indigo-700 focus:outline-none focus:ring"
          >
          {i18n[404].BUTTON}
          </a>
        </div>
      </div>
</Layout>